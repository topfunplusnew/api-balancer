# ============================================
# 服务器配置
# ============================================
# API服务端口（默认: 5000，Docker环境: 25052）
PORT=25052

# CORS跨域配置（允许的前端地址）
CORS_ORIGIN=http://localhost:23032

# 环境类型（development / production / test）
NODE_ENV=development


# ============================================
# Redis 缓存配置
# ============================================
# Redis 主机地址（本地开发: localhost，Docker: redis）
REDIS_HOST=localhost

# Redis 端口
REDIS_PORT=6379

# Redis 密码（可选，留空表示无密码）
REDIS_PASSWORD=

# Redis 数据库索引（0-15）
REDIS_DB=0


# ============================================
# Supabase 数据库配置
# ============================================
# Supabase 项目 URL
# 格式: https://your-project-id.supabase.co
SUPABASE_URL=your_supabase_project_url

# Supabase 匿名密钥（客户端使用）
# 在 Supabase Dashboard > Settings > API 中获取
SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase 服务角色密钥（管理员操作使用，具有完整权限）
# ⚠️ 警告: 此密钥具有完整数据库权限，切勿泄露！
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key


# ============================================
# 第三方 API 配置 - Creatomate
# ============================================
# Creatomate 视频渲染服务
API_CREATOMATE_BASE_URL=https://api.creatomate.com
API_CREATOMATE_VERSION=v2
API_CREATOMATE_TOKEN=your_creatomate_api_token


# ============================================
# 第三方 API 配置 - Coze
# ============================================
# Coze AI 对话平台
API_COZE_BASE_URL=https://api.coze.com
API_COZE_VERSION=v1
API_COZE_TOKEN=your_coze_api_token

# Coze 签名验证密钥（可选，用于 webhook 签名验证）
API_COZE_SIGNATURE_SECRET=


# ============================================
# 第三方 API 配置 - n8n
# ============================================
# n8n 工作流自动化平台
API_N8N_BASE_URL=https://n8n.example.com
API_N8N_VERSION=v1
API_N8N_TOKEN=your_n8n_api_key

# n8n 签名验证密钥（可选）
API_N8N_SIGNATURE_SECRET=


# ============================================
# 添加更多第三方 API 配置（可选）
# ============================================
# 格式:
# API_{名称大写}_BASE_URL=https://api.example.com
# API_{名称大写}_VERSION=v1
# API_{名称大写}_TOKEN=your_token
#
# 示例 - 支付服务:
# API_STRIPE_BASE_URL=https://api.stripe.com
# API_STRIPE_VERSION=v1
# API_STRIPE_TOKEN=sk_test_xxxxx
#
# 示例 - 邮件服务:
# API_SENDGRID_BASE_URL=https://api.sendgrid.com
# API_SENDGRID_VERSION=v3
# API_SENDGRID_TOKEN=SG.xxxxx


# ============================================
# Web 前端配置
# ============================================
# 前端访问的 API 基础地址
NEXT_PUBLIC_API_BASE=http://localhost:25052


# ============================================
# 日志配置（可选）
# ============================================
# 日志级别（error / warn / info / debug）
LOG_LEVEL=info

# 是否启用文件日志
LOG_FILE_ENABLED=true

# 日志文件路径
LOG_FILE_PATH=./logs


# ============================================
# 安全配置（可选）
# ============================================
# JWT 密钥（如果使用 JWT 认证）
# JWT_SECRET=your_jwt_secret_key_here

# API Key 过期时间（小时）
# API_KEY_EXPIRATION=24

# 密码加密盐轮数
# BCRYPT_ROUNDS=10


# ============================================
# 开发工具配置（可选）
# ============================================
# 是否启用调试模式
DEBUG=false

# 是否启用 API 详细日志
API_VERBOSE_LOGGING=true

# 是否启用 SQL 查询日志
SQL_LOGGING=false
